<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_hey"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#151515"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:padding="0dp"
		android:orientation="vertical"
		android:gravity="start|center_vertical">
		<LinearLayout
			android:id="@+id/linear_hes"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="15dp"
			android:paddingTop="8dp"
			android:paddingRight="15dp"
			android:paddingBottom="8dp"
			android:orientation="horizontal"
			android:gravity="start|center_vertical"
			android:paddingStart="0dp"
			android:paddingEnd="13dp">
			<LinearLayout
				android:id="@+id/linear_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:orientation="vertical"
				android:gravity="start|top"
				android:layout_marginEnd="10dp">
				<TextView
					android:id="@+id/textview_name_option"
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:layout_marginBottom="2dp"
					android:text=""
					android:textSize="12sp"
					android:textColor="#FFFFFF" />
				<TextView
					android:id="@+id/textview_iswhatda"
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:text=""
					android:textSize="11sp"
					android:textColor="#E0E0E0" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_of_toggle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:gravity="end"
				android:paddingStart="0dp"
				android:paddingEnd="5dp">
				<ImageView
					android:id="@+id/imageview_button"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:background="@drawable/arrow_right"
					android:src="@drawable/blank90x90"
					android:scaleType="center" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_container_expander"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#070707"
			android:paddingBottom="10dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear_hev1"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#151515"
				android:layout_marginBottom="10dp"
				android:orientation="vertical" />
			<LinearLayout
				android:id="@+id/linear_expander"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="20dp"
				android:orientation="vertical" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
